<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <ListView android:id="@+id/ybk_detail_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    
    <ImageView android:id="@+id/ybk_detail_bigimg"
        android:layout_width="162dp"
        android:layout_height="204dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />
        
    <LinearLayout android:id="@+id/ybk_detail_info"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView android:id="@+id/ybk_detail_subtitle"
            style="@style/YBKDetailInfoTextView" />
        
        <TextView android:id="@+id/ybk_detail_author"
            style="@style/YBKDetailInfoTextView" />
        
        <TextView android:id="@+id/ybk_detail_translator"
            style="@style/YBKDetailInfoTextView" />
        
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf" />

    <LinearLayout android:id="@+id/ybk_detail_bar"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    
        <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ybk_want_it"
            android:onClick="barClicked"
            android:background="#00000000" />
        
        <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ybk_check_out"
            android:onClick="barClicked"
            android:background="#00000000" />
        
	</LinearLayout>
    
</LinearLayout>